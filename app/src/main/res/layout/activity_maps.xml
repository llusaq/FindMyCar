<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/lowback"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/btn_return" />

                <Button
                    android:id="@+id/btn_nav"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_alignBaseline="@+id/getLon"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/btn_nav"
                    app:layout_constraintTop_toBottomOf="@+id/btn_home"
                    tools:layout_editor_absoluteX="0dp"
                    android:layout_alignParentLeft="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/btn_home"
                    android:layout_marginTop="8dp"
                    android:text="@string/txt_urcar"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="165dp"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longitude"
                    android:textColor="@android:color/background_light"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/getLon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView13"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="165dp"
                    tools:layout_editor_absoluteY="57dp"
                    android:layout_alignLeft="@+id/textView13" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Latitude"
                    android:textColor="@android:color/background_light"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/getLat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@android:color/background_light"
                    tools:layout_editor_absoluteX="237dp"
                    tools:layout_editor_absoluteY="115dp"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="@android:color/background_light"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/dataCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

        </LinearLayout>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="399dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:context=".MapsActivity" />

    </android.support.constraint.ConstraintLayout>


</RelativeLayout>
